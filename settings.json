{
    "files.exclude": {
        "**/.*.*.cmd": true,
        "**/.*.d": true,
        "**/.*.S": true,
        "**/*.diff": true,
        "**/*.rej": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "jspm_packages": true,
        "node_modules": true,
        "**/**/node_modules": true,
        "**/drivers/[a-r]*": true,
        "**/drivers/[t-z]*": true,
        "**/arch/alpha/**": true,
        "**/arch/arc/**": true,
        "**/arch/arm/**": true,
        "**/arch/[c-u]*/**": true,
        "**/arch/x86/**": true,
        "**/arch/xtensa/**": true,
        "**/firmware": true,
        "**/net": true,
        "**/sound": true,
        "**/vmlinux*": true,
        "**/.zip": true,
        "**/.sh": true,
        "**/.idea": true,
        "**/*.o": true,
        "**/*.map": true,
    },
	"files.watcherexclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        //"**/drivers/*/**": true,
        "**/drivers/[a-r]*/**": true,
        "**/drivers/[t-z]*/**": true,
        "**/arch/alpha/**": true,
        "**/arch/arc/**": true,
        "**/arch/arm/**": true,
        "**/arch/[c-u]*/**": true,
        "**/arch/x86/**": true,
        "**/arch/xtensa/**": true,
        "**/*.o": true,
        "**/*.cmd": true,
        "**/*.map": true,
        "**/*.txt": true,
    },
	"search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.idea": true,
        "**/*.o": true,
        "**/*.cmd": true,
        "**/*.map": true,
    },
    "[c]": {
        "editor.detectIndentation": false,
        "editor.tabSize": 4,
        "editor.insertSpaces": false,
        "editor.rulers": [120]
    }
}
